{
  "name": "functional-hooks",
  "private": false,
  "description": "Just another react hook library. Light-weight, simple, and easy to use.",
  "author": "Hesamsrk <hesamsrk@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hesamsrk/functional-hooks"
  },
